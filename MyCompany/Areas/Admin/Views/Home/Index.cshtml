@model IQueryable<ServiceItem>
@{
    string strTitle = "Панель администратора";
    ViewBag.Title = strTitle;
}

<div>
    <h2>@strTitle</h2>

    <div class="div-box">
        <h3>Редактировать страницы сайта</h3>
        <a asp-area="Admin" asp-controller="Questions" asp-action="ShowAll" asp-route-codeWord="PageQuestions">Рабочий стол</a>
        <a asp-area="Admin" asp-controller="TextFields" asp-action="Edit" asp-route-codeWord="PageIndex">Главная</a>
        <a asp-area="Admin" asp-controller="ServiceItems" asp-action="ShowAll" asp-route-codeWord="PageServices">Наши услуги</a>
        <a asp-area="Admin" asp-controller="ProjectItems" asp-action="ShowAll" asp-route-codeWord="PageProjects">Наши Проекты</a>
        <a asp-area="Admin" asp-controller="BlogItems" asp-action="ShowAll" asp-route-codeWord="PageBlog">Блог</a>
        <a asp-area="Admin" asp-controller="TextFields" asp-action="Edit" asp-route-codeWord="PageContacts">Контакты</a>
    </div>
    <div class="div-box">
        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
            <input type="submit" value="Выйти" />
        </form>
    </div>
</div>


